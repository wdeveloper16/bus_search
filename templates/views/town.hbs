<div class="container-fluid container--city">
    <div class="city city--with-banner">
        <div class="city__vertical-banner banner banner--vertical">
            {{>mdad160x600}}
        </div>
        <div class="city__data">
            <div class="search city__search">
                {{>search}}
            </div>

            <div class="section">
                {{>breadcrumbs}}
                <h1 class="city__title section__title">{{heading}}</h1>
                <ul class="list list--city city__list">
                    {{#each data.stopsleft}}
                        {{>list-item}}
                    {{/each}}
                    {{>mdvideo}}
                    {{#each data.stopsright}}
                        {{>list-item}}
                    {{/each}}
                </ul>
                {{#needsPagination data.stops.totalPages}}{{>pagination}}{{/needsPagination}}
            </div>
        </div>
        <div class="city__map map-overlay">
            <nav class="map-overlay__navbar">
                <div class="map-overlay__title">Karte</div>
                <a href="#" class="map-overlay__close">+</a>
            </nav>

            <iframe width="100%" height="450" frameborder="0"
                    src="/mapTown/{{name}}"></iframe>
        </div>
        <div class="city__show-map-wrapper">
            <button class="city__show-map">
                Karte <i class="fa fa-map-o" aria-hidden="true"></i>
            </button>
        </div>
    </div>
</div>